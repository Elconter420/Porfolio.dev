---
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "flex gap-x-2 rounded-full text-xs py-1 px-2 bg-black/70 text-white",
    icons: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class:
      "flex gap-x-2 rounded-full text-xs py-1 px-2 bg-[#003159] text-white",
    icons: Tailwind,
  },
};

const PROJECTS = [
  {
    title: "SVGL - A beautiful library with SVG logos",
    description:
      "Created from scrath with Next.js and Tailwind CSS. It's a library with SVG logos from the most popular brands. Optimized for SEO and performance.",
    link: "https://svgl.app",
    github: "https://github.com/pheralb/svgl",
    image: "/projects/svgl.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-4 flex-row mb-3">
        {tags.map((tag) => (
          <li>
            <span class={tag.class}>
              <tag.icons class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt="Captura de pantalla del proyecto"
      />
    </article>
  ))
}
